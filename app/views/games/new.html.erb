<h1>New game</h1>

<ul>
  <% @letters.each do |letter| %>
    <li class="list"> <%= letter %> </li>
  <% end %>
</ul>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <label for="word">What is the longest word you can find ?</label>
  <div class="form-group">
    <input class="form-control" type="text" name="word">
    <input class="button" type="submit" value="Play">
  </div>
</form>
